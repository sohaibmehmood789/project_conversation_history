<div class="space-y-2 text-sm text-[#b9bbbe]">
  <% if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "block hover:text-white transition duration-150" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "block hover:text-white transition duration-150" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block hover:text-white transition duration-150" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block hover:text-white transition duration-150" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block hover:text-white transition duration-150" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
            omniauth_authorize_path(resource_name, provider),
            data: { turbo: false },
            class: "w-full bg-[#7289da] text-white px-4 py-2 rounded-lg hover:bg-[#5b6eae] transition duration-200" %>
    <% end %>
  <% end %>
</div>
