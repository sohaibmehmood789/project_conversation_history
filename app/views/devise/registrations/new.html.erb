<div class="min-h-screen flex items-center justify-center bg-[#2c2f33] p-6">
  <div class="bg-[#36393f] shadow-xl rounded-lg p-8 w-full max-w-md text-white">
    
    <h2 class="text-3xl font-bold text-[#7289da] text-center mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-5") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: "block text-sm font-semibold text-[#b9bbbe]" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
              class: "w-full bg-[#202225] border border-[#202225] text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#7289da]" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-semibold text-[#b9bbbe]" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full bg-[#202225] border border-[#202225] text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#7289da]" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-semibold text-[#b9bbbe]" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-[#72767d] block mb-1">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full bg-[#202225] border border-[#202225] text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#7289da]" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-semibold text-[#b9bbbe]" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full bg-[#202225] border border-[#202225] text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#7289da]" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Sign Up",
              class: "bg-[#7289da] text-white px-6 py-3 rounded-lg hover:bg-[#5b6eae] transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-[#b9bbbe]">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
