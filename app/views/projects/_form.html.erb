<div class="min-h-screen bg-[#2f3136] flex items-center justify-center p-6">
  <div class="bg-[#36393f] shadow-lg rounded-lg p-8 max-w-3xl w-full">
    
    <h1 class="text-3xl font-bold text-[#7289da] mb-6">Create New Project</h1>
    
    <%= form_with model: @project, local: true, class: "space-y-4" do |f| %>
      
      <div class="flex flex-col">
        <%= f.label :title, class: "text-[#b9bbbe] text-sm mb-2" %>
        <%= f.text_field :title, class: "p-3 bg-[#2f3136] text-white border border-[#72767d] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#7289da]", placeholder: "Project Title" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :description, class: "text-[#b9bbbe] text-sm mb-2" %>
        <%= f.text_area :description, class: "p-3 bg-[#2f3136] text-white border border-[#72767d] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#7289da]", placeholder: "Project Description", rows: 4 %>
      </div>

      <div class="flex flex-col">
        <%= f.label :status, class: "text-[#b9bbbe] text-sm mb-2" %>
        <%= f.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, { include_blank: false }, 
          class: "p-3 bg-[#2f3136] text-white border border-[#72767d] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#7289da]" %>
      </div>

      <div class="mt-6 flex justify-between">
        <%= f.submit "Create Project", class: "bg-[#7289da] text-white px-6 py-3 rounded-lg hover:bg-[#5b6eae] transition duration-200" %>
        <%= link_to "Cancel", projects_path, class: "text-[#b9bbbe] hover:text-[#7289da] transition duration-200" %>
      </div>
    
    <% end %>
  </div>
</div>
