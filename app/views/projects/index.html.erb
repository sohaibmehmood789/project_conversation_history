<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold text-[#7289da] mb-6">Projects Index</h1>

  <div class="mb-4">
    <%= link_to "New Project", new_project_path, data: { turbo_frame: "_top" }, 
          class: "bg-[#7289da] text-white px-4 py-2 rounded-lg hover:bg-[#5b6eae] transition duration-200" %>
  </div>

  <ol id="projects" class="bg-[#2f3136] shadow-lg rounded-lg p-4">
    <%= turbo_stream_from "projects" %>
    <%= render @projects %>
  </ol>
</div>
